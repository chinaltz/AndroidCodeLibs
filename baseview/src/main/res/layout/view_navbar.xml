<?xml version="1.0" encoding="utf-8"?><!--头部导航布局-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/navBar"
    >

    <View
        android:id="@+id/v_adapterview"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/mainColor"
        android:visibility="gone" />

    <RelativeLayout
      android:layout_below="@+id/v_adapterview"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/mainColor">

        <LinearLayout

            android:id="@+id/nav_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <ImageView
                android:id="@+id/nav_left_icon"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_gravity="center|left"
                android:adjustViewBounds="true"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/nav_back"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/nav_left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:paddingLeft="4dp"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:visibility="gone"
                tools:visibility="visible" />


        </LinearLayout>


        <TextView
            android:id="@+id/nav_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="17dp" />


        <LinearLayout
            android:id="@+id/nav_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:paddingRight="15dp">

            <ImageView
                android:id="@+id/nav_right_icon"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_gravity="center|left"
                android:adjustViewBounds="true"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"

                android:src="@drawable/nav_back"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/nav_right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:paddingLeft="4dp"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:visibility="gone"
                tools:visibility="visible" />


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>

